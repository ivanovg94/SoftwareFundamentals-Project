@model EventSpot.Models.Event
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>Create Event</h2>
        @using (Html.BeginForm("Create", "Event", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.EventName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.EventName, new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.EventDate, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.EditorFor(model => model.EventDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EventDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StartTime, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.StartTime)
                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(m => m.EventDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.EventDate, new { @class = "form-control" })
                    </div>
                </div>*@

            <div class="form-group">
                @Html.LabelFor(m => m.EventDescription, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.EventDescription, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            //IMAGE

            @*<div class="form-group">
                @Html.LabelFor(m => m.EventImage, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.EventImage, new { type = "file" })
                    @Html.ValidationMessage("CustomMessage")
                </div>
            </div>*@

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Main", "Event", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        }
    </div>

</div>
