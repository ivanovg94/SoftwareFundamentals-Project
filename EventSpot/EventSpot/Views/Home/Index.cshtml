@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>VGS Events presents</h1>
    <p class="lead" style="font-style:italic">" Breathtaking, Heartstopping, Mind-blowing... "</p>
    <p class="lead" style="font-style:italic">Everywhere you wish to be, everything you ever wanted to see. </p>
</div>

<div class="row">
    <div class="col-md-4">
        <p>
            <div id="muteYouTubeVideoPlayer"></div>

            <script async src="https://www.youtube.com/iframe_api"></script>
            <script>
                function onYouTubeIframeAPIReady() {
                    var player;
                    player = new YT.Player('muteYouTubeVideoPlayer', {
                        videoId: 'uILXl6BCYJ4', // YouTube Video ID
                        width: 560,               // Player width (in px)
                        height: 316,              // Player height (in px)
                        playerVars: {
                            autoplay: 1,        // Auto-play the video on load
                            controls: 1,        // Show pause/play buttons in player
                            showinfo: 0,        // Hide the video title
                            modestbranding: 0,  // Hide the Youtube Logo
                            loop: 0,            // Run the video in a loop
                            fs: 0,              // Hide the full screen button
                            cc_load_policy: 0, // Hide closed captions
                            iv_load_policy: 3,  // Hide the Video Annotations
                            autohide: 0         // Hide video controls when playing
                        },
                        events: {
                            onReady: function (e) {
                                e.target.mute();
                            }
                        }
                    });
                }

            </script>
        </p>
    </div>
    <div class="pull-right">
        <div class="col-md-8">

            <h2>Be there!</h2>
            <h2>Be part of it!</h2>
            <h2>Enjoy every moment!</h2>
        </div>
    </div>

</div>